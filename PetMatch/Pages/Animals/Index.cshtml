@page
@model PetMatch.Pages.Animals.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    @if (User.IsInRole("Admin"))
    {
        <a asp-page="Create">Create New</a>
    }
</p>

<table class="table">
    <thead>
        <tr>
            <th>Poză</th>

            <th>Adăpost</th>
            <th>Categorie</th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].RescueDate)
            </th>
            <th>Acțiuni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Animal)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="~/images/animals/@item.ImageUrl"
                             alt="@item.Name"
                             style="width: 100px; height: 100px; object-fit: cover; border-radius: 10px;" />
                    }
                    else
                    {
                        <span style="font-size: 50px;">🐶</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shelter.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RescueDate)
                </td>

                <td>
                    @if (item.IsAdopted)
                    {
                        <span class="badge bg-danger">ADOPTAT</span>
                    }
                    else
                    {
                        <span class="badge bg-success">DISPONIBIL</span>
                        <br />
                        <a asp-page="/AdoptionRequests/Create" asp-route-animalId="@item.ID" class="btn btn-sm btn-warning mt-2">🐾 Adoptă</a>
                        <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-info mt-2">Detalii</a>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <div class="mt-2">
                            <small>
                                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                            </small>
                        </div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>