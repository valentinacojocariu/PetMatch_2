<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetMatchMobile.MainPage"
             BackgroundColor="#f8f9fa"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto, *, Auto" Padding="20,10">

        <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Margin="0,0,0,10">
            <Label Grid.Column="0" Text="Găsește Prieten 🐾" 
                   FontSize="24" FontAttributes="Bold" 
                   VerticalOptions="Center" TextColor="#333"/>

            <Button Grid.Column="1" Text="Ieșire" 
                    BackgroundColor="#eee" TextColor="Black" 
                    HeightRequest="40" CornerRadius="10"
                    Clicked="OnLogoutClicked"/>
        </Grid>

        <Frame Grid.Row="1" CornerRadius="30" Padding="0" IsClippedToBounds="True" HasShadow="True" BorderColor="Transparent">
            <Grid>
                <Image Source="{Binding CurrentAnimal.ImageUrl}" Aspect="AspectFill"/>

                <BoxView VerticalOptions="End" HeightRequest="200" Color="Black" Opacity="0.6"/>

                <StackLayout VerticalOptions="End" Padding="20">
                    <Label Text="{Binding CurrentAnimal.Name}" TextColor="White" FontSize="32" FontAttributes="Bold"/>
                    <Label Text="{Binding CurrentAnimal.Age, StringFormat='{0} ani'}" TextColor="#FFC107" FontSize="20" FontAttributes="Bold"/>

                    <StackLayout Orientation="Horizontal" Spacing="10" Margin="0,5">
                        <Label Text="{Binding CurrentAnimal.CategoryName}" TextColor="#ddd" FontSize="16"/>
                        <Label Text="•" TextColor="#ddd"/>
                        <Label Text="{Binding CurrentAnimal.ShelterName}" TextColor="#ddd" FontSize="16"/>
                    </StackLayout>
                </StackLayout>

                <Grid BackgroundColor="#AA000000" IsVisible="{Binding CurrentAnimal.IsAdopted}">
                    <Label Text="ADOPTAT" TextColor="#FF4444" FontSize="40" FontAttributes="Bold" 
                           HorizontalOptions="Center" VerticalOptions="Center" Rotation="-15"/>
                </Grid>
            </Grid>
        </Frame>

        <HorizontalStackLayout Grid.Row="2" Spacing="25" HorizontalOptions="Center" Margin="0,20">

            <ImageButton Source="nope.jpg" 
                         HeightRequest="65" WidthRequest="65" CornerRadius="32" 
                         BackgroundColor="White" Clicked="OnNopeClicked"/>

            <ImageButton Source="info.jpg" 
                         HeightRequest="50" WidthRequest="50" CornerRadius="25" 
                         BackgroundColor="#eee" Clicked="OnInfoClicked"/>

            <ImageButton Source="heart.jpg" 
                         HeightRequest="65" WidthRequest="65" CornerRadius="32" 
                         BackgroundColor="White" Clicked="OnLikeClicked"
                         IsEnabled="{Binding IsAdoptable}"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>